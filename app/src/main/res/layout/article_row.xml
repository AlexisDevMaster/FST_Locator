<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_rect"
    android:elevation="8dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titreArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />




    <LinearLayout
        android:id="@+id/layoutDateBouton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/dateDebutArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dateFinArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>



    <TextView
        android:id="@+id/descriptionArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview_batiment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:useDefaultMargins="true">
    <Button
        android:id="@+id/seeOnMapButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonshapered"
        android:text="Carte"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:focusable="false"/>

    <Button
        android:id="@+id/seeDetailsButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonshapeblue"
        android:text="DÃ©tails"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:focusable="false"/>
    </GridLayout>
</LinearLayout>
